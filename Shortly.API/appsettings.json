{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EmailSettings": {
    "Provider": "smtp",
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "FromEmail": "noreply@shortly.com",
      "FromName": "Shortly",
      "EnableSsl": true,
      "UseDefaultCredentials": false,
      "Timeout": 30000,
      "Domain": ""
    },
    "General": {
      "EnableEmailSending": true,
      "MaxRetryAttempts": 3,
      "RetryDelayMilliseconds": 1000,
      "BulkEmailBatchSize": 50,
      "BulkEmailDelayBetweenBatches": 100,
      "LogEmailContent": false,
      "AllowedDomains": [],
      "BlockedDomains": ["tempmail.com", "10minutemail.com"]  
    }
  },
  "Jwt": {
    "Issuer": "https://localhost:7096/",
