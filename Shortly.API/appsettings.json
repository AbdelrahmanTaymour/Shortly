  "Authentication": {
    "Google": {
      "ClientId": "your-google-client-id-here",
      "ClientSecret": "your-google-client-secret-here"
    }
  },
  "AppSettings": {
    "Name": "Shortly",
    "BaseUrl": "http://localhost:5163",
    "BaseUIUrl": "http://127.0.0.1:5500",
    "LogoUrl": "",
    "SupportEmail": "shortly.teams@gmail.com",
    "Tokens": {
