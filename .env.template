# Copy this file to .env and fill in actual values

# Database Configuration
DB_PASSWORD=[ur-db-password]

# JWT Configuration
JWT_KEY=[YourVeryStrongJWTKey]

# Email Settings  
EMAIL_USERNAME=[ur-smtp-email]
